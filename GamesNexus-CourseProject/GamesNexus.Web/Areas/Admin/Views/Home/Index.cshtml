@{
    ViewData["Title"] = "Admin Area";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> games.
        <br />You can <b>add</b> and <b>delete</b> news articles.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Game" asp-action="All"
       class="btn btn-primary btn-lg">All Games</a>
    <a asp-area="" asp-controller="Game" asp-action="Add"
       class="btn btn-primary btn-lg">Add Game</a>
    <span> | </span>
    <a asp-area="" asp-controller="News" asp-action="All"
       class="btn btn-primary btn-lg">All News</a>
    <a asp-area="" asp-controller="News" asp-action="Add"
       class="btn btn-primary btn-lg">Add News</a>
    <span> | </span>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
    <span> | </span>
    <button data-bs-toggle="modal" data-bs-target="#addCategoryModal" class="btn btn-outline-primary btn-lg">Add Category</button>
    <span> | </span>
    <button data-bs-toggle="modal" data-bs-target="#addGenreModal" class="btn btn-outline-primary btn-lg">Add Genre</button>

    <partial name="_AddCategoryModalPartial" model=Model />
    <partial name="_AddGenreModalPartial" model=Model />
</div>

