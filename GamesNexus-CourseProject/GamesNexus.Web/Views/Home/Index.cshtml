@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>   
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Games</h2>
            <div class="row justify-content-between">
                @foreach (var game in Model.GameIndexViewModel)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card" style="width: 100%;">
                            <img class="card-img-top game-image" src="@game.ImageUrl" alt="Game Image">
                            <div class="card-body">
                                <h5 class="card-title">@game.Title</h5>
                                <p class="card-text">Genres: @string.Join(", ", game.Genres)</p>
                                <a href="@Url.Action("GameDetails", "Game", new { id = game.Id })" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>News</h2>
            @foreach (var newsItem in Model.NewsIndexViewModels)
            {
                <div class="card mb-4">
                    <h5 class="card-header">@newsItem.Title</h5>
                    <div class="card-body">
                        <h5 class="card-title">@newsItem.PublishedOn</h5>
                        <p class="card-text">@newsItem.Content</p>
                        <a href="@Url.Action("Details", "News", new { id = newsItem.Id })" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


