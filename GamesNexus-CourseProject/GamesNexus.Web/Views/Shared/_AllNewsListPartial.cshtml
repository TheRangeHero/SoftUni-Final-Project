@model IEnumerable<NewsAllViewModel>

@foreach (var news in Model)
{
    <div class="card mb-3">

        <h5 class="card-header">@news.Title</h5>
        <div class="card-body">
            <p class="card-text">@((news.Content.Length <= 100) ? news.Content : news.Content.Substring(0, 200) + " ...")</p>
            <p class="mt-2 text-muted">Published by: @news.PublisherName</p>
            <div class="d-flex align-items-center mt-3">
                <div class="d-flex gap-2">
                    <a asp-area="" asp-controller="News" asp-action="Details" asp-route-id="@news.Id"
                       class="btn btn-info mr-2">Read more</a>
                    <a asp-area="" asp-controller="News" asp-action="Edit" asp-route-id="@news.Id"
                       class="btn btn-warning mr-2">Edit</a>
                    <a asp-area="" asp-controller="News" asp-action="Delete" asp-route-id="@news.Id"
                       class="btn btn-danger">Delete</a>
                </div>
            </div>
            <div class="position-absolute text-muted" style="bottom: 10px; right: 10px;">
                Published on: @news.PublishedOn
            </div>
        </div>
    </div>
}
